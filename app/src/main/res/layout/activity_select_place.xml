<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    tools:context="com.bit.pixelopolis_station.activities.SelectPlaceActivity"
    android:weightSum="3">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="select_place_bg.zip"
        tools:layout_editor_absoluteY="65dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/select_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="187dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/destination1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:elevation="10dp"
                android:onClick="onClickPlace01Button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_destination_01" />

            <ImageButton
                android:id="@+id/destination2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:elevation="10dp"
                android:onClick="onClickPlace02Button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_destination_02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="187dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/destination3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:elevation="10dp"
                android:onClick="onClickPlace03Button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_destination_03" />

            <ImageButton
                android:id="@+id/destination4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:elevation="10dp"
                android:onClick="onClickPlace04Button"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_destination_04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="187dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/destination5"
                android:layout_width="187dp"
                android:layout_height="fill_parent"
                android:background="#0000"
                android:elevation="10dp"
                android:gravity="center_horizontal"
                android:onClick="onClickPlace05Button"
                android:orientation="horizontal"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/button_destination_05" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>