<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bit.pixelopolis_station.activities.UpdateAppActivity">

    <TextView
        android:id="@+id/version_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your application is outdated!"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/continue_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Continue Connect without Download"
        android:layout_marginTop="100dp"
        android:onClick="onClickContinueConnectToServer"/>

    <Button
        android:id="@+id/go_to_download_path_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Get Latest Version!"
        android:layout_marginTop="0dp"
        android:onClick="updateApplication"/>

</LinearLayout>